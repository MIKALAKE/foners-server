<!doctype html>
  <html lang="en">

  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <style type="text/css">
      .form-control:focus {
        color: #232323;
        background-color: #fff;
        border-color: #232323;
        outline: 0;
        box-shadow: 0 0 0 0.2rem #71899733;
      }
    </style>
    <%= csrf_meta_tags %>
  </head>

  <body class="container" style="display: flex;justify-content: center; margin: 30vh auto;">
    <div class="container row">
      <div class="col-3">
      </div>
      <div class="col-6">
        <h2 class="mb-4">Log in</h2>

        <div class="mb-4" style="color: red;">
          <%- flash.each do |name, msg| -%>
            <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
          <%- end -%>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div>
            <%= f.label :password, class: "form-label" %><br />
            <%= f.password_field :password, required: true, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-lg btn-block mt-5", style: 'background-color:#EA375E;border-color:#EA375E;display:inline-block;color:#ffffff;font-family:Ubuntu, Helvetica, Arial, sans-serif;font-size:13px;font-weight:normal;line-height:150%;margin:0;text-transform:none;padding:10px 25px;mso-padding-alt:0px;border-radius:3px;' %>
          </div>
        <% end %>
      </div>
      <div class="col-3">
      </div>
    </div>
  </body>
</html>











